<?import javafx.scene.text.Text?>

<DialogPane prefWidth="300.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <header>
      <Text fill="#727272" strokeType="OUTSIDE" strokeWidth="0.0" text="Modificar Puesto">
         <font>
            <Font name="Consolas Bold" size="18.0" />
         </font>
      </Text>
   </header>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <cursor>
      <Cursor fx:constant="DEFAULT" />
   </cursor>
   <buttonTypes>
      <ButtonType fx:constant="OK" />
      <ButtonType fx:constant="CANCEL" />
   </buttonTypes>
   <content>
      <VBox alignment="CENTER_RIGHT">
         <children>
            <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="20.0" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Text opacity="0.42" strokeType="OUTSIDE" strokeWidth="0.0" text="Código" wrappingWidth="68.64453125" />
                  <TextField alignment="CENTER" disable="true" editable="false" prefHeight="25.0" prefWidth="150.0" text="&lt;CodigoPuesto&gt;" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="20.0" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nombre del Puesto (*)" wrappingWidth="69.64453125" />
                  <TextField alignment="CENTER" prefHeight="25.0" prefWidth="150.0" text="&lt;NombrePuesto&gt;" />
                  <Circle fill="#ff1f1f" opacity="0.75" radius="5.0" stroke="#682727" strokeLineCap="ROUND" strokeLineJoin="ROUND" strokeType="INSIDE">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Circle>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="110.0" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Descripción(*)" wrappingWidth="69.64453125">
                     <font>
                        <Font size="11.0" />
                     </font></Text>
                  <TextField alignment="TOP_RIGHT" prefHeight="25.0" prefWidth="150.0" text="&lt;DescripcionPuesto&gt;" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="140.0" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Empresa(*)" wrappingWidth="71.64453125" />
                  <ComboBox prefWidth="150.0" promptText="&lt;EmpresaPuesto&gt;" />
               </children>
            </HBox>
            <VBox style="-fx-border-color: black;">
               <children>
                  <Label text="Características">
                     <font>
                        <Font name="Consolas Bold" size="16.0" />
                     </font>
                  </Label>
                  <Separator prefWidth="200.0" />
                  <HBox alignment="CENTER" prefHeight="50.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Competencia" wrappingWidth="70.64453125" />
                        <ChoiceBox prefHeight="25.0" prefWidth="111.0" />
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Puntaje" wrappingWidth="42.64453125" />
                        <TextField prefHeight="25.0" prefWidth="28.0" />
                     </children>
                  </HBox>
                  <Separator prefWidth="200.0" />
                  <Button alignment="CENTER_RIGHT" contentDisplay="CENTER" graphicTextGap="10.0" mnemonicParsing="false" text="+">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
            <Text fill="#941c1c" strokeType="OUTSIDE" strokeWidth="0.0" text="El nombre ya existe" />
         </children></VBox>
   </content>
</DialogPane>

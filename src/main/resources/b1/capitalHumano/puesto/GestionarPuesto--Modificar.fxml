<DialogPane fx:id="dialog" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="b1.capitalHumano.puesto.ControllerGraficoPuestoModificar_Dialog">
   <header>
      <Text fill="#727272" strokeType="OUTSIDE" strokeWidth="0.0" text="Modificar Puesto">
         <font>
            <Font name="Consolas Bold" size="18.0" />
         </font>
      </Text>
   </header>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <cursor>
      <Cursor fx:constant="DEFAULT" />
   </cursor>
   <buttonTypes>
      <ButtonType fx:constant="OK" />
      <ButtonType fx:constant="CANCEL" />
   </buttonTypes>
   <content>
      <VBox fx:id="dialogVbox">
         <children>
            <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="20.0" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Text opacity="0.42" strokeType="OUTSIDE" strokeWidth="0.0" text="Código" wrappingWidth="68.64453125" />
                  <TextField fx:id="codigoInput" alignment="CENTER" disable="true" editable="false" prefHeight="25.0" prefWidth="150.0" text="&lt;CodigoPuesto&gt;" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="20.0" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nombre del Puesto(*)" wrappingWidth="69.64453125" />
                  <TextField fx:id="nombreInput" alignment="CENTER" prefHeight="25.0" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="110.0" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Descripción(*)" wrappingWidth="69.64453125">
                     <font>
                        <Font size="11.0" />
                     </font></Text>
                  <TextField fx:id="descripcionInput" alignment="CENTER" prefHeight="25.0" prefWidth="150.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="140.0" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Empresa(*)" wrappingWidth="71.64453125" />
                  <ChoiceBox fx:id="empresaChoice" prefWidth="150.0" />
               </children>
            </HBox>
            <Label text="Características">
               <font>
                  <Font name="Consolas Bold" size="16.0" />
               </font>
            </Label>
            <ScrollPane prefHeight="95.0" prefWidth="360.0">
               <content>
                  <VBox fx:id="VBoxCompetencia" />
               </content>
            </ScrollPane>
            <Button fx:id="buttonAddCompetencia" alignment="CENTER_RIGHT" contentDisplay="CENTER" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleAddCompetencia" text="+">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children></VBox>
   </content>
</DialogPane>
